            <ComboBox x:Name="cmbGender" Grid.Column="1" HorizontalAlignment="Left" Margin="66,72,0,0" VerticalAlignment="Top" Width="70" IsEditable="True" Height="26" VerticalContentAlignment="Center" FontSize="14"/>
